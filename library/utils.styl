/*
 * A collection of utils for easy development.
 */

ie ?= true

// Convenient tool a sets size the box.
// Parameters: <width> <height> (<width & height> | <width> _ | _ <height>)
size()
    if length(arguments) == 1
        width: arguments[0]
        height: arguments[0]
    else
        if arguments[0] != '_'
            width: arguments[0]
        if arguments[1] != '_'
            height: arguments[1]

// Clearfix.
// @see http://nicolasgallagher.com/micro-clearfix-hack/
clearfix()
    &:before
    &:after
        content ""
        display table

    &:after
        clear both

    // @fallback IE 6/7
    *zoom 1 if ie

// Image replacement technique.
// @see http://nicolasgallagher.com/another-css-image-replacement-technique/
image-replacement()
    font 0/0 a
    text-shadow none
    color transparent

// Declaration font for the web.
webfont(file, name, style = normal, weight = normal)
    @font-face
        font-family name
        font-style style
        font-weight weight
        src url(file + '.eot')
        src local('â˜º'), url(file + '.eot?#iefix') format('embedded-opentype'), url(file + '.woff') format('woff'), url(file + '.ttf') format('truetype'), url(file + '.svg#' + name) format('svg')

    // Corrects rendering fonts in Chrome.
    @media screen and (-webkit-min-device-pixel-ratio: 0)
        @font-face
            font-family name
            font-style style
            font-weight weight
            src url(file + '.svg#' + name) format('svg')