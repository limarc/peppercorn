    .{rtl-class} &
        padding-left arguments
        padding-right 0

// Border.
rtl-border()
    border arguments

rtl-border-left()
    border-left arguments

    .{rtl-class} &
        border-left none
        border-right arguments

rtl-border-right()
    border-right arguments

    .{rtl-class} &
        border-left arguments
        border-right none

rtl-border-left-width()
    border-left-width arguments

    .{rtl-class} &
        border-left-width none
        border-right-width arguments

rtl-border-right-width()
